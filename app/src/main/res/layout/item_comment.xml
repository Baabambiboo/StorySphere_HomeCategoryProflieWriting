<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:contentDescription="@string/app_name"
        android:layout_marginEnd="8dp"/>

    <!-- ส่วนเนื้อหา -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- บรรทัดบน: ชื่อ + ป้าย Writer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvWriterBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="Writer"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_badge_writer"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- ข้อความคอมเมนต์ -->
        <TextView
            android:id="@+id/tvCommentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment text"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

        <!-- Action ด้านล่าง: Like / Reply -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:textSize="12sp"
                android:textColor="@color/darkpurple"
                android:paddingEnd="16dp"/>

            <TextView
                android:id="@+id/btnReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply"
                android:textSize="12sp"
                android:textColor="@color/darkpurple"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ปุ่ม report -->
    <ImageView
        android:id="@+id/btnMore"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/overflow_menu_vertical_svgrepo_com"
        android:tint="@color/darkpurple"
        android:contentDescription="Report"
        tools:ignore="UseAppTint" />
</LinearLayout>
